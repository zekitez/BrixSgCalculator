<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Sugar">
        <EditTextPreference
            app:key="@string/key_sw_sugar"
            app:title="Specific weight gram/liter (default 1587)"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="@string/pref_conv_eu_value"
            app:entries="@array/pref_conv_method_labels"
            app:entryValues="@array/pref_conv_method_values"
            app:key="@string/key_convMethod"
            app:singleLineTitle="false"
            app:title="@string/txt_convMethodBrixSG" />

        <ListPreference
            app:defaultValue="@string/pref_solv_121_value"
            app:entries="@array/pref_solv_method_labels"
            app:entryValues="@array/pref_solv_method_values"
            app:key="@string/key_solvMethod"
            app:singleLineTitle="false"
            app:title="@string/txt_solvMethodSugar" />
    </PreferenceCategory>

</PreferenceScreen>